<%# provide(:title, "#{@product.name}") %>
<div class="row">
    <div class="col-xs-4 col-xs-offset-2 product-show">
      <%#= attachment_image_tag(@product, :image, size: "340x220", fallback: "no_image.jpg" ) %>
    </div>

    <div class="col-xs-6 product-show">
      <div class="product-description">
        <div class="field product-name">
          <h2><%#= @product.name %></h2>
        </div>

        <div class="field">
          <%#= @product.description %>
        </div>

        <div class="field product-price">
          <h3>¥ <%#= price(@product.price).to_s(:delimited) %>
              <span class="tax">(税込)</span>
          </h3>
        </div>
      </div>
　　　<div class="field">
　　　 <%# if @product.status == true %>
　　　  <%# if @product.genre.status == true %>
　　　     <%#= form_with @cart_item, url :customers_cart_items_path,method: :post) do |f| %>
　　　     <!--プルダウン追記-->
　　　     <%#= f.submit "カートに入れる" %>
　　　     <%# end %>
　　　  <%# else %>
　　　   <h3>売れ切れ中</h3>
　　　  <%# end %>
　　　 <%# elsif @product.status == false %>
　　　   <h3>売れ切れ中</h3>
　　　 <%# end %>
　　　</div>
    </div>
</div>
