<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"名前"%>
        <%= f.label :"(姓)"%>
        <%= f.text_field :last_name %>
        <%= f.label :"(名)"%>
        <%= f.text_field :first_name %>
      </div>

      <div class="field">
        <%= f.label :"フリガナ" %>
        <%= f.label :"(セイ)"%>
        <%= f.text_field :kana_last_name %>
        <%= f.label :"(メイ)" %>
        <%= f.text_field :kana_first_name %>
      </div>

      <div class="field">
         <%= f.label :email %></br>
         <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

       <div class="field">
         <%= f.label :"郵便番号(ハイフンなし)" %></br>
         <%= f.text_field :postal_code, autofocus: true%>
      </div>
       <div class="field">
         <%= f.label :"住所" %></br>
         <%= f.text_field :residence, autofocus: true %>
      </div>

       <div class="field">
         <%= f.label :"電話番号(ハイフンなし)" %></br>
         <%= f.text_field :phone_number, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(6文字以上)" %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <p></p>

      <div class="actions">
        <input type="submit" name="commit" value="Sign up" class="btn btn-sm btn-success" data-disable-with="Sign up">
      </div>

      <% end %>
      <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</main>
