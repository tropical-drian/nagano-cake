<h2>注文情報確認</h2>
  <% if @cart_item.present? %>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_item.each do |cart_items| %>
        <tr>
          <td>
            <%= attachment_image_tag( cart_items.product, :image, size: "60x50", fallback: "no_image.jpg") %>
            <%= cart_items.product.name %>
          </td>
            <%= tax_price(cart_items.product.price).to_s(:delimited) %>
          <td>
          </td>
          <td>
            <%= cart_items.quantity %>
          </td>
          <td>
            <%= subtotal(cart_items).to_s(:delimited) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <table>
      <tr>
        <th>送料</th>
          <td><%= @order.postage %></td>
      </tr>
      <tr>
        <th>商品合計</th>
          <td><%= product_total_price(@cart_item).to_s(:delimited) %><</td>
      </tr>
      <tr>
        <th>請求金額</th>
          <td><%= billing(@order).to_s(:delimited) %></td>
      </tr>
    </table>

    <table>
      <tr>
        <th>支払方法</th>
          <td>
            <%= @order.payment_method %>
          </td>
      </tr>
      <tr>
        <th>お届け先</th>
          <td>
            <%= @order.postal_code %> <%=@order.address %></br>
            <%=@order.name %>
          </td>
        </tr>
    </table>

  <!-- formを非表示で記入 -->
    <div>
      <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :total_price %>
        <%= f.submit "購入を確定する", class: "btn-success" %>
      <% end %>
    </div>

  <% else %>
  <!-- if カートアイテムがない時 -->
    <p>カートに商品がありません。</p>

  <% end %>
