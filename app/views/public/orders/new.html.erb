<h2>注文情報入力</h2>
  <% if @cart_item.present? %>
    <%= form_with model:@order, method: :post, local: true  do |f| %>
      <p>支払い方法</p>
      <div>
        <%= f.radio_button :payment_method, :"クレジットカード", checked: "checked" %>
        <%= f.label :payment_method, "クレジットカード" %>
      </div>
      <div>
        <%= f.radio_button :payment_method, :"銀行振込" %>
        <%= f.label :payment_method, "銀行振込" %>
      </div>

      <p>お届け先</p>
      <div>
        <%= f.radio_button :address, 0, checked: "checked" %>
        <%= f.label :address, "ご自身の住所" %></br>
        <%= curent_customer.postal_code %> <%= curent_customer.residence %></br>
        <%= current_customer.last_name %> <%= current_customer.first_name %>
      </div>

      <% if @delivery != [] %>
      <div>
        <%= f.radio_button :address, 1 %>
        <%= f.label :address, "登録済住所から選択" %></br>
        <%= f.collection_select(:delivery_id, @delivery, :id, :delivery_address) %>
      </div>
      <% end %>

      <div>
        <%= f.radio_button :address, 2 %>
        <%= f.label :address, "新しいお届け先" %>
      </div>
      <div>
        <%= f.label :"郵便番号(ハイフンなし)" %>
        <%= f.text_field :postal_code %>
      </div>
      <div>
        <%= f.label :"住所" %>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.label :"宛名" %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.submit "確認画面へ進む", class: "btn-success" %>
      </div>
  <% end %>
  <% else %>
      <!-- カートアイテムがない時 -->
    <p>ショッピングカートに商品がありません。</p>
  <% end %>