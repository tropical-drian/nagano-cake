<%# if product.genre.is_valid == true %>
  <div class="product-container">

      <%= link_to product_path(product.id), class: "btn-link", :style=>"color:#0099FF;" do %>
      <div id="img_field" class="product">
        <%= attachment_image_tag(product, :image, size: "180x130", fallback: "no_image.jpg") %>
      </div>
      <p class="products-name">
        <%= product.name %>
      </p>
      <h3>¥ <%= tax_price(product.price).to_s(:delimited) %>
       <span class="tax">(税込)</span>
      </h3>

      <% end %>

  </div>
<%# end %>