<%# provide(:title, "商品一覧")　%>
<div class="container">

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    <h2>商品一覧</h2>

	  <span>
	    （全<%= @products.total_count %>件中<%= @products.count %>）
	  </span>

	  <div class="clearfix product-box">
		<% @products.each do |product| %>
		  <%= render "product_each", product: product %>
		<% end %>
	  </div>
	 <div class="text-center"><%= paginate(@products) %></div>
	</div>
</div>

