<div class="container">
   <div class="row">
     <div class="col_md_12">
      <h4>商品一覧<small>(全<%= @products.count %>件)</small></h4>
    </div>
   </div>
      <div class="row">
        <div class="col_md_1">
          <table class="table table-bordered genre-table">
            <thead class="table-secondary">
              <tr>
                <th>ジャンル検索</th>
              </tr>
            </thead>

            <tbody>
             <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= link_to genre.name, search_search_path %>
                </td>
              </tr>
             <% end %>
            </tbody>
         </table>
        </div>

          <div class="row mt-2 mb-2 text-center text-xs-center text-sm-center text-md-left">
            <%= render "product_each", product: @product %>
          </div>

        </div>
      </div>
        <div class="col align-self-center"><%= paginate @products%></div>
  </div>