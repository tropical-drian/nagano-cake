<h2>マイページ</h2>
<p>登録情報 <%= link_to "編集する", customer_edit_path %></p>
<table>
	<tbody>
		<tr>
			<td>氏名</td>
			<td><%= @customer.last_name %>　<%= @customer.first_name %></td>
		</tr>
		<tr>
			<td>カナ</td>
			<td><%= @customer.kana_last_name %>　<%= @customer.kana_first_name %></td>
		</tr>
		<tr>
			<td>郵便番号</td>
			<td><%= @customer.postal_code %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= @customer.residence %></td>
		</tr>
		<tr>
			<td>電話番号</td>
			<td><%= @customer.phone_number %></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td><%= @customer.email %></td>
		</tr>
	</tbody>
</table>

