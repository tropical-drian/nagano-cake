<div class="container my-5">
	<div class="row">
		<div class="offset-1">
			<h2 class="red-border px-3 pb-1">配送先を編集する</h2>
		</div>
	</div>

 <div class="create-delivery-section">
   <%# byebug %>
  <%= form_with model: @delivery, url: deliveries_path, local: true do |f| %>

   <div class="create-delivery-table row">
    <div class="col-xs-7">
      <table class="table">

        <tbody>

         <tr class="row">
            <th class ="col-xs-3">郵便番号</th>
            <td class="col-xs-9 row">
              <div class="col-xs-4">
                <%= f.text_field :postcode, class:"form-control", placeholder: "0000000" %>
              </div>
            </td>
            </th>
          </tr>

          <tr class="row">
            <th>住所</th>
            <th>
              <div class="col-xs-10">
                <%= f.text_field :address, class:"form-control", placeholder: "東京都渋谷区渋谷区神園町0-0" %>
              </div>
            </th>
          </tr>

          <tr class="row">
            <th>宛先</th>
            <td>
              <div class="col-xs-5">
                <%= f.text_field :name, class:"form-control", placeholder: "令和　陸子" %>
              </div>
            </td>
          </tr>

          <th>
            <div class="create-delivery-btn-wrap row">
             <%= f.submit '変更内容を保持', class:"btn btn-success" %>
            </div>
          </th>

        </tbody>
      </table>
    </div>
   </div>
  <% end %>

</div>