<div class='container px-5 px-sm-0'>
  <div class='row'>
    <h2>商品編集</h2>
    <div class='col-md-8'>
        <%= form_with model: @product, url:admin_products_path, local:true do |f| %>
      <div class="form-group">
        <%= f.label :image_id, "商品画像" %>

      </div>
      <div class="form-group">
        <%= f.label :name, "商品名" %>
        <%= f.text_field :name, class: 'form-control product_name' %>
      </div>
      <div class="form-group">
        <%= f.label :descroption, "商品説明" %>
        <%= f.text_area :description, class: 'form-control product_description' %>
      </div>
      <div class="form-group">
        <%= f.label :genre, "ジャンル" %>
        <%= f.collection_select :genre, @genres, :id, :name, include_blank: "選択して下さい" %>
      </div>
      <div class="form-group">
        <%= f.label :price, "税抜価格" %>
        <%= f.text_field :price, class: 'form-control product_price' %>
      </div>
      <div class="form-group">
        <%= f.label :status, "販売ステータス" %>
        <p><%= f.radio_button :status, :true %>販売中<%= f.radio_button :status, :false %>販売停止中</p>
      </div>
      <div class="form-group">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      </div>
        <% end %>
    </div>
  </div>
</div>