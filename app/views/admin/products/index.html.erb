<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h2 class="mt-3">商品一覧</h2>
        <%= link_to '追加する', new_admin_product_path(@product), class: "btn btn-sm btn-success" %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
            <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admin_product_path(product) %></td>
            <td><%= product.price %></td>
            <td><%= product.genre.name %></td>
            <td><%= product.status ? '販売中' : '販売停止中' %></td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>