<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-5'>
        <%= form_with model: [:admin, @genre],local:true do |f| %>
      <div class="form-group">
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, class: 'form-control genre_name' %>
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      </div>
        <% end %>
    </div>
  </div>
</div>