<div class="container">
<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
<%= form_with model: [:admin, @customer], local: true  do |f| %>
<table class>
  <tr>
   <td><%= f.label :"会員ID" %></td>
   <td><%= f.label :"#{@customer.id}" %></td>
  </tr>
  <tr>
   <td><%= f.label :"氏名" %></td>
   <td><%= f.text_field :last_name %></td>
   <td><%= f.text_field :first_name %></td>
  </tr>
  <tr>
   <td><%= f.label :"フリガナ" %></td>
   <td><%= f.text_field :kana_last_name %></td>
   <td><%= f.text_field :kana_first_name %></td>
  </tr>
  <tr>
   <td><%= f.label :"郵便番号", autofocus: true %></td>
   <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
   <td><%= f.label :"住所" %></td>
   <td><%= f.text_field :residence, autofocus: true %></td>
  </tr>
  <tr>
   <td><%= f.label :"電話番号" %></td>
   <td><%= f.text_field :phone_number %></td>
  </tr>
  <tr>
   <td><%= f.label :"メールアドレス" %></td>
   <td><%= f.text_field :email %></td>
  </tr>
  <tr>
   <td><%= f.label :"会員ステータス"%></td>
   <td>
     <%= f.radio_button :is_valid, false %>
     <%= f.label :is_valid, "有効", value: :false %>
     <%= f.radio_button :is_valid, true %>
     <%= f.label :is_valid, "退会", value: :true %>
   </td>
 </tr>
</table>
<div class="actions">
  <%= f.submit '変更を保存' ,class: "btn btn-success" %>
</div>
<% end %>
</div>