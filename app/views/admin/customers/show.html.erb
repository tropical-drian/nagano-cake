<div class='container'>
<div class='row'>
<div class='col-md-12'>
<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
<table class="field">
  <tr>
    <td>会員ID</td>
    <td>　　　　　<%= @customer.id %></td>
  </tr>
  <tr>
    <td>氏名</td>
    <td>　　　　　<%= @customer.last_name %><%= @customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td>　　　　　<%= @customer.kana_last_name %><%= @customer.kana_first_name %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td>　　　　　<%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td>　　　　　<%= @customer.residence %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td>　　　　　<%= @customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td>　　　　　<%= @customer.email%></td>
  </tr>
  <tr>
    <td>会員ステータス</td>
    <td>
    <% if @customer.is_valid == true%>
    <p class= 'text-secondary'>　　　　　退会</p>
    <% else %>
    <p class= 'text-success'>　　　　　有効</p>
    <% end %>
    </td>
  </tr>
</table>


<div class="actions">
  <%= link_to "編集する",edit_admin_customer_path(@customer),class: "btn btn-success" %>
  <%= "注文履歴一覧を見る" %>
</div>

</div>
</div>
</div>