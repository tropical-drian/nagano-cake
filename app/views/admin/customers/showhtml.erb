<h2><%= full_name(@customer) %>さんの会員詳細</h2>
<div class="field">
  <p>会員ID　　　　　<%= @customer.id %></p>
</div>
<div class="field">
  <p>氏名　　　　　<%= full_name(@customer) %></p>
</div>
<div class="field">
  <p>フリガナ　　　　　<%= kana_full_name(@customer) %>></p>
</div>
<div class="field">
  <p>郵便番号　　　　<%= @customer.postal_code %></p>
</div>
<div class="field">
  <p>住所　　　　　　<%= @customer.residence %></p>
</div>
<div class="field">
  <p>電話番号　　　　<%= @customer.phone_number %></p>
</div>
<div class="field">
  <p>メールアドレス　<%= @customer.email%></p>
</div>
<div class="field">
  <p>会員ステータス　        
  <% if customer.is_valid == true%>
  <p>退会</p>
  <% else %>
  <p>有効</p>
  <% end %>
  </p>
</div>
<div class="actions">
  <%= link_to "編集する",edit_admin_customer_path(@customer) %>
  <%= "注文履歴一覧を見る" %>
</div>